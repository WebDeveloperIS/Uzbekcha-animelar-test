<!DOCTYPE html>
<html>

<head>
    <title>Uzbekcha Animelar</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/script.js"></script>
</head>

<body>
    <nav>
        <div><a href="/">Uzbekcha Animelar</a></div>
        <div>
            <span>Welcome, <%= user.username %></span>
            <a href="/logout">Logout</a>
            <% if(user.role==='admin' ){ %> | <a href="/admin">Admin Panel</a>
                <% } %>
        </div>
    </nav>

    <h1>ðŸŽŒ Barcha Anime</h1>

    <form method="get" action="/">
        <input type="text" name="search" value="<%= search %>" placeholder="Qidirish...">
        <button>Qidirish</button>
    </form>

    <div class="anime-list">
        <% animes.forEach(a=> { %>
            <div class="anime">
                <h3>
                    <%= a.title %>
                </h3>
                <% if(a.video.includes('youtube.com') || a.video.includes('youtu.be')){ %>
                    <iframe width="100%" height="200" src="<%= a.video.replace('watch?v=','embed/') %>" frameborder="0"
                        allowfullscreen></iframe>
                    <% } else { %>
                        <video src="/uploads/<%= a.video %>" controls></video>
                        <% } %>
            </div>
            <% }) %>
    </div>
</body>

</html>