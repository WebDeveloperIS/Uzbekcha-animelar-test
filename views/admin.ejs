<!DOCTYPE html>
<html>

<head>
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <nav>
        <div><a href="/">Uzbekcha Animelar</a></div>
        <div>
            <a href="/admin/add">Anime Qo‘shish</a>
            <a href="/logout">Logout</a>
        </div>
    </nav>

    <h2>Admin Panel</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Video</th>
            <th>Actions</th>
        </tr>
        <% animes.forEach(a=>{ %>
            <tr>
                <td>
                    <%= a.id %>
                </td>
                <td>
                    <%= a.title %>
                </td>
                <td>
                    <%= a.video %>
                </td>
                <td>
                    <a href="/admin/edit/<%= a.id %>">Tahrirlash</a> |
                    <a href="/admin/delete/<%= a.id %>"
                        onclick="return confirm('O‘chirishni xohlaysizmi?')">O‘chirish</a>
                </td>
            </tr>
            <% }) %>
    </table>
</body>

</html>